# Set default behavior to automatically normalize line endings
* text=auto

# Java source files
*.java text eol=lf
*.xml text eol=lf
*.properties text eol=lf

# Documentation
*.md text eol=lf
*.adoc text eol=lf
*.txt text eol=lf

# Scripts (always use LF, even on Windows)
*.sh text eol=lf

# Windows scripts
*.bat text eol=crlf
*.cmd text eol=crlf

# Binary files
*.jar binary
*.class binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary

# Maven wrapper
mvnw text eol=lf
mvnw.cmd text eol=crlf

